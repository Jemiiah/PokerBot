# Monad Network Configuration
MONAD_RPC_URL=https://testnet-rpc.monad.xyz
MONAD_CHAIN_ID=10143

# Agent Wallet (NEVER commit real private keys)
AGENT_PRIVATE_KEY=0x_your_private_key_here

# Contract Addresses (populated after deployment)
POKER_GAME_ADDRESS=
POKER_GAME_4MAX_ADDRESS=0x9d4191980352547DcF029Ee1f6C6806E17ae2811
ESCROW_ADDRESS=
ESCROW_4MAX_ADDRESS=0x943473B2fF00482536BD6B64A650dF73A7dA3B04
TOURNAMENT_ADDRESS=

# Coordinator Service
COORDINATOR_URL=ws://localhost:8080
COORDINATOR_API_URL=http://localhost:8080

# Agent Configuration
AGENT_NAME=PokerBot001
MAX_WAGER_PERCENT=5
KELLY_FRACTION=0.25
TIMEOUT_SECONDS=60

# Logging
LOG_LEVEL=info

# OpenAI API (for agent personality/thoughts)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Agent Personality Settings
# For Live mode (8 agents with unique personalities):
#   - Blaze: Aggressive and fiery (color: #FF6B35)
#   - Frost: Cool and calculated (color: #4FC3F7)
#   - Shadow: Mysterious and deceptive (color: #9C27B0)
#   - Storm: Unpredictable and volatile (color: #00BCD4)
#   - Sage: Wise and patient (color: #4CAF50)
#   - Ember: Warm and steady (color: #FFC107)
#   - Viper: Quick and venomous (color: #8BC34A)
#   - Titan: Strong and immovable (color: #607D8B)
#
# For Demo mode (4 AI-company themed agents):
#   - Claude, ChatGPT, Grok, DeepSeek
AGENT_PERSONALITY=Blaze
AGENT_MODE=live

# To run multiple agents, use the individual .env files:
#   .env.blaze, .env.frost, .env.shadow, .env.storm
#   .env.sage, .env.ember, .env.viper, .env.titan
# Each needs a unique AGENT_PRIVATE_KEY with funded wallet
